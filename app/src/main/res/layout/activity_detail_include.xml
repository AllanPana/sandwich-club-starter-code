<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_place_of_origin_label"
            style="@style/TextViewDetailStyle"
            android:text="@string/detail_place_of_origin_label"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintEnd_toStartOf="@+id/tv_place_of_origin"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_place_of_origin" />

        <TextView
            android:id="@+id/tv_also_known_as_label"
            style="@style/TextViewDetailStyle"
            android:text="@string/also_known_as_label"
            app:layout_constraintEnd_toStartOf="@+id/tv_also_known_as"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toEndOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_also_known_as"/>


        <TextView
            android:id="@+id/tv_description_label"
            style="@style/TextViewDetailStyle"
            android:text="@string/detail_description_label"
            app:layout_constraintEnd_toStartOf="@+id/tv_description"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_description" />

        <TextView
            android:id="@+id/tv_ingredients_label"
            style="@style/TextViewDetailStyle"
            android:text="@string/detail_ingredients_label"
            app:layout_constraintEnd_toStartOf="@+id/tv_ingredients"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_ingredients" />

        <TextView
            android:id="@+id/tv_place_of_origin"
            style="@style/TextViewDetailStyle"
            android:layout_marginEnd="@dimen/tv_standard_margin"
            android:layout_marginTop="@dimen/tv_standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/center_guideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/tv_standard_margin" />

        <TextView
            android:id="@+id/tv_also_known_as"
            style="@style/TextViewDetailStyle"
            android:layout_marginEnd="@dimen/tv_standard_margin"
            android:layout_marginTop="@dimen/tv_standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/center_guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_place_of_origin"
            android:layout_marginRight="@dimen/tv_standard_margin" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextViewDetailStyle"
            android:layout_marginEnd="@dimen/tv_standard_margin"
            android:layout_marginTop="@dimen/tv_standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/center_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_also_known_as"
            android:layout_marginRight="@dimen/tv_standard_margin" />

        <TextView
            android:id="@+id/tv_ingredients"
            style="@style/TextViewDetailStyle"
            android:layout_marginEnd="@dimen/tv_standard_margin"
            android:layout_marginTop="@dimen/tv_standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="@dimen/tv_zero_horizontal_bias"
            app:layout_constraintStart_toStartOf="@+id/center_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            android:layout_marginRight="@dimen/tv_standard_margin" />

        <android.support.constraint.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/left_gude_line" />

        <android.support.constraint.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/center_guide_line" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>